{
  "CSS Block": {
    "scope": "scss,sass",
    "prefix": "blk",
    "body": ["@include block($1) {", "$2", "}"],
    "description": "single Block"
  },

  "CSS Element": {
    "scope": "scss,sass",
    "prefix": "ele",
    "body": ["@include element($1) {", "  $2", "}"],
    "description": "Element"
  },

  "CSS Modifier": {
    "scope": "scss,sass",
    "prefix": "mod",
    "body": ["@include modifier($1) {", "$2", "}"],
    "description": "Element"
  },

  "CSS When": {
    "scope": "scss,sass",
    "prefix": "when",
    "body": ["@include when($1) {", "$2", "}"],
    "description": "Element"
  },

  "CSS Hover": {
    "scope": "scss,sass",
    "prefix": "hv",
    "body": ["&::hover {", "$2", "}"],
    "description": "Element"
  },

  "CSS Pseudo": {
    "scope": "scss,sass",
    "prefix": "pse",
    "body": ["@include pseudo($1) {", "$2", "}"],
    "description": "Element"
  },

  "CSS With Attribute": {
    "scope": "scss,sass",
    "prefix": "attr",
    "body": ["@include with-attr($1) {", "$2", "}"],
    "description": "Element"
  }
}
